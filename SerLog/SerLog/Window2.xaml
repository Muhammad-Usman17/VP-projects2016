            <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="121,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207"/>
            <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="123,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>
            <Button x:Name="button3" Content="Save" HorizontalAlignment="Left" Margin="336,67,0,0" VerticalAlignment="Top" Width="64" Click="button3_Click"/>
            <Button x:Name="button4" Content="Save" HorizontalAlignment="Left" Margin="336,106,0,0" VerticalAlignment="Top" Width="65" Click="button4_Click"/>

        </Grid>
    </Viewbox>
</Window>
